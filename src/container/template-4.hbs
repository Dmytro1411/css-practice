<header class="header">
	<div>
		{{> logo}}
	</div>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>


{{#with main}}
<main class="row">
	<img src="{{image}}" alt="row image" class="row_image">
	{{> cardMain data=this}}
</main>
{{/with}}


<div class="featured">
	{{#each featured}}
	{{> cardFeatured data=this}}
	{{/each}}
</div>



<div class="actions">
	{{#each actions}}
	<div class="actions_content">
		<h3 class="title actions_title">{{heading}}</h3>
		<a href="{{url}}" class="button actions_button">{{text}}</a>
	</div>
	{{/each}}
</div>


<footer class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div class="col-3">
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}

</footer>