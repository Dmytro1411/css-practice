<header class="header">
	<a href="#test">
		{{> logo}}
	</a>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_text">{{description}}</p>
	</div>
	{{/with}}

	{{#with form}}
	<form class="form">
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
				id="form-input-{{id}}">
			{{/each}}
		</div>
		<div class="form_checkbox">
			<input type="checkbox" name="checkbox.name" id="checkbox.name">
			<div></div>
			<label for="checkbox.name">{{checkbox.label}}</label>
		</div>
		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>

{{#with updates}}
<div class="updates">
	<h4 class="updates_title">{{title}}</h4>


	{{#each list}}
	{{> cardList data=this}}
	{{/each}}


	<a href="{{show_all.url}}" class="updates_link">{{show_all.text}}</a>
</div>
{{/with}}

<div class="expirience">
	{{#with expirience}}
	<div>
		<strong class="expirience_title">{{title}}</strong>
		<span class="expirience_badge_text expirience_badge_right">{{badge}}</span>
	</div>
	<div class="expirience_block">
		{{#each list}}
		<div class="expirience_content">
			<h3 class="expirience_name">{{name}}</h3>
			<p class="expirience_text">{{details}}</p>
		</div>
		{{/each}}
	</div>
	{{/with}}
</div>

<footer class="footer" id="test">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div class="col-3">
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}

</footer>